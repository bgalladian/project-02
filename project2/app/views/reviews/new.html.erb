<div class = "new-review">
<div class="form">
<%= form_for [@movie, @review]  do |f| %>

  <%= f.label :author %>
  <%= f.text_field :author %>
<br>
<br>
  <%= f.label :Was_it_worth_it?  %>
  <%= f.select :rating, [["Waste  of my money!"], ["Thank goodness I didn't pay for it"],["Wouldn't pay for a friend"], ["Totally worth it!"]] %>
<br>
<br>
  <%= f.label :review %>
  <%= f.text_area :content, :cols => "80", :rows => "30" %>
<br>
<br>
  <%= f.submit "Submit Review"%>
  <% end %>
</div>
</div>
