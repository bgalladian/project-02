<div class = "show-page">
<h1> <%= @movie.title %></h1>
<p>Release Date: <%= @movie.release_date %> <font color ="gold">|</font> Director(s): <%=@movie.director %> <font color ="gold">|</font> Writer(s): <%=@movie.written_by %> </p>
  <img src="<%= @movie.poster_url %>">
<br>

<% if @movie.user == current_user %>
<h2> <%= link_to "Edit Movie Information", edit_movie_path(@movie)%> | <%= link_to "Delete Movie", movie_path(@movie), method: :delete, data: {confirm: "Are you sure you want to delete?"}%></h2>
<% end %>


<p> <%= @movie.summary %> </p>
<br>

<h2>Critic Reviews<%=link_to "(+)", new_movie_review_path(@movie)%>:</h2>
<% @movie.reviews.each do |review| %></p>
<h3><%= link_to review.author, movie_review_path(@movie, review)%></h3>
<% end %>
</div>
